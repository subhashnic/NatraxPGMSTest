@{
    ViewBag.Title = "Component";
    Layout = "~/Views/Shared/_LayoutTrack.cshtml";
}

<style>
    .table > tbody > tr > td {
        padding: 2px 8px !important;
        cursor: pointer !important;
    }

    .card {
        margin-bottom: 0px !important;
        margin-top: 10px !important;
    }

    .bootstrap-select {
        margin-top: 16px !important;
    }

    .main-panel > .content {
        margin-top: 0 !important;
    }
</style>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                    @*<div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>*@
                    <h6 class="card-title" style="margin-top: 5px;">
                        <strong><span>Date:</span></strong>&nbsp;<span id="BookingDate"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <strong><span>Document Type:</span></strong>&nbsp;<span id="BookingType"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <strong><span>Document No.:</span></strong>&nbsp;<span id="BookingNo"></span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="arrow-steps clearfix">
                        <div class="step current"><span>Booking</span></div>
                        <div class="step"><span>PI</span></div>
                        <div class="step"><span>Approve</span></div>
                        <div class="step"><span>PO</span></div>
                        <div class="step"><span>PO Verification</span></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Component</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th width="10%">Sr.No.</th>
                                            <th width="50%">List</th>
                                            <th width="20%">Count</th>
                                            <th width="20%" class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Component</td>
                                            <td id="CountComponentView">2</td>
                                            <td id="CountComponentEditable" style="display: none;">
                                                <input type="text" class="form-control" value="0">
                                            </td>
                                            <td class='td-actions text-center' id="ComponentAction">
                                                <button type='button' rel='tooltip' id="Component" class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                            </td>
                                            <td class='td-actions text-center' id="ComponentSaveAction" style="display: none;">
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>save</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title='' onclick="CloseComponent()"><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Motor</td>
                                            <td id="CountMotorView">0</td>
                                            <td id="CountMotorEditable" style="display: none;">
                                                <input type="text" class="form-control" value="0">
                                            </td>
                                            <td class='td-actions text-center' id="MotorAction">
                                                <button type='button' rel='tooltip' id="Motor" class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                            </td>
                                            <td class='td-actions text-center' id="MotorSaveAction" style="display: none;">
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>save</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title='' onclick="CloseMotor()"><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>Battery</td>
                                            <td id="CountBatteryView">0</td>
                                            <td id="CountBatteryEditable" style="display: none;">
                                                <input type="text" class="form-control" value="0">
                                            </td>
                                            <td class='td-actions text-center' id="BatteryAction">
                                                <button type='button' rel='tooltip' id="Battery" class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                            </td>
                                            <td class='td-actions text-center' id="BatterySaveAction" style="display: none;">
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>save</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title='' onclick="CloseBattery()"><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>Inverter</td>
                                            <td id="CountInverterView">0</td>
                                            <td id="CountInverterEditable" style="display: none;">
                                                <input type="text" class="form-control" value="0">
                                            </td>
                                            <td class='td-actions text-center' id="InverterAction">
                                                <button type='button' rel='tooltip' id="Inverter" class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                            </td>
                                            <td class='td-actions text-center' id="InverterSaveAction" style="display: none;">
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>save</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title='' onclick="CloseInverter()"><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th width="25%">Type</th>
                                            <th width="25%">Code</th>
                                            <th width="25%">Description</th>
                                            <th width="25%" class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Component</td>
                                            <td>1</td>
                                            <td></td>
                                            <td class='td-actions text-center'>
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title=''><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Component</td>
                                            <td>2</td>
                                            <td></td>
                                            <td class='td-actions text-center'>
                                                <button type='button' rel='tooltip' class='btn btn-info' data-original-title='' title=''><i class='material-icons'>edit</i></button>
                                                <button type='button' rel='tooltip' class='btn btn-danger' data-original-title='' title=''><i class='material-icons'>close</i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#Component").click(function () {
        $("#ComponentAction").hide();
        $("#CountComponentView").hide();
        $("#CountComponentEditable").show();
        $("#ComponentSaveAction").show();
    });
    $("#Motor").click(function () {
        $("#MotorAction").hide();
        $("#CountMotorView").hide();
        $("#CountMotorEditable").show();
        $("#MotorSaveAction").show();
    });
    $("#Battery").click(function () {
        $("#BatteryAction").hide();
        $("#CountBatteryView").hide();
        $("#CountBatteryEditable").show();
        $("#BatterySaveAction").show();
    });
    $("#Inverter").click(function () {
        $("#InverterAction").hide();
        $("#CountInverterView").hide();
        $("#CountInverterEditable").show();
        $("#InverterSaveAction").show();
    });
    function CloseComponent() {
        $("#ComponentAction").show();
        $("#CountComponentView").show();
        $("#CountComponentEditable").hide();
        $("#ComponentSaveAction").hide();
    }
    function CloseMotor() {
        $("#MotorAction").show();
        $("#CountMotorView").show();
        $("#CountMotorEditable").hide();
        $("#MotorSaveAction").hide();
    }
    function CloseBattery() {
        $("#BatteryAction").show();
        $("#CountBatteryView").show();
        $("#CountBatteryEditable").hide();
        $("#BatterySaveAction").hide();
    }
    function CloseInverter() {
        $("#InverterAction").show();
        $("#CountInverterView").show();
        $("#CountInverterEditable").hide();
        $("#InverterSaveAction").hide();
    }
</script>
