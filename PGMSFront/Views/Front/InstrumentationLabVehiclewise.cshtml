<script>
    var Holdid = '';
    var spanPrv = '';
    function changeColor(id) {
        if (id != Holdid || Holdid == "") {
            $("#tr_" + Holdid + "").removeClass('highlighted');
            $("#sp_" + Holdid).css("visibility", "hidden");
            $("#tr_" + id + "").addClass('highlighted');
            Holdid = id;
        }
        else {
            if ($("#tr_" + id + "").hasClass('highlighted')) {
                $("#tr_" + id + "").removeClass('highlighted');
                Holdid = 0;
            }
            else {
                $("#tr_" + id + "").addClass('highlighted');
                Holdid = id;
            }
        }
    }

    function AddMore() {
        $("#AddMoreRow").show();
    }
</script>

